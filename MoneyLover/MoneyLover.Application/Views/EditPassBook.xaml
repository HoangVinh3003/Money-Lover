<Window x:Class="MoneyLover.Application.Views.EditPassBook"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="Arial"        
        Background="LightGray"
        Height="545" Width="320"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="290"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="290"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btnClose" HorizontalAlignment="Right" BorderBrush="LightGray" Background="LightGray" TextElement.Foreground="Black" Width="30" Height="30" Margin="0,0,0,40.4" Click="btnClose_Click">X</Button>
        <Grid Grid.Row="0">
            <TextBlock Text="THAY DOI THONG TIN SO TIET KIEM" Width="230" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextAlignment="Center" FontSize="20" TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="1" Margin="10">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Center" Grid.Column="1" Margin="144,0,30,0" Width="156">
                    <ComboBox x:Name="cbPassbookId" Foreground="Green" SelectionChanged="cbPassbookId_SelectionChanged" Margin="-8,5,-7,5" Width="160"/>
                    <TextBox x:Name="txtBank" Foreground="Green" Margin="-8,5,-7,5" Width="160"   />
                    <TextBox x:Name="txtDeposit" Foreground="Green"  Margin="-8,5,-7,5" Width="160"  />
                    <ComboBox x:Name="cbbTerm"  Foreground="Green"  Margin="-8,5,-7,5" Width="160"  />
                    <TextBox x:Name="txtInterestRates" Foreground="Green" Margin="-8,5,-7,5" Width="160" />
                    <TextBox x:Name="txtIndefiniteTerm"  Foreground="Green" Margin="-8,5,-7,5" Width="160" />
                    <ComboBox x:Name="cbbPayInterest" Foreground="Green" Margin="-8,5,-7,5" Width="160" />
                    <ComboBox x:Name="cbbDue"  Foreground="Green" Margin="-8,5,-7,5" Width="160" />
                    
                </StackPanel>
                <StackPanel Margin="0,0,174,0" Grid.Column="1">
                    <TextBlock  Text="Sổ Tiết Kiệm" HorizontalAlignment="Left" FontSize="13" Margin="0,10,0,20"/>
                    <TextBlock  Text="Ngân Hàng" HorizontalAlignment="Left" FontSize="13" Margin="0,5,0,20"/>
                    <TextBlock  Text="Số Tiền Gốc" HorizontalAlignment="Left" FontSize="13" Margin="0,10,0,20"/>
                    <TextBlock  Text="Kì Hạn" HorizontalAlignment="Left" FontSize="13" Margin="0,5,0,20"/>
                    <TextBlock  Text="Lãi Suất" HorizontalAlignment="Left" FontSize="13" Margin="0,5,0,20"/>
                    <TextBlock  Text="Lãi Suất Không Kỳ Hạn" HorizontalAlignment="Left" FontSize="13" Margin="0,5,0,20"/>
                    <TextBlock  Text="Trả Lãi" HorizontalAlignment="Left" FontSize="13" Margin="0,5,0,20"/>
                    <TextBlock  Text="Đến Kì Hạn" HorizontalAlignment="Left" FontSize="13" Margin="0,5,0,20"/>
                </StackPanel>

            </Grid>

        </Grid>
        <Grid Grid.Row="2">
            <StackPanel VerticalAlignment="Bottom">
                <Button x:Name="btnSave" Height="30" Background="Green" Content="LƯU THAY ĐỔI"  Margin="5"
                    Foreground="White" TextElement.FontSize="12"
                        Click="btnSave_Click"/>

                <Button x:Name="btnCancel" Height="30" Background="White" Content="HỦY"  Margin="5"
                    Foreground="Green" TextElement.FontSize="12"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
